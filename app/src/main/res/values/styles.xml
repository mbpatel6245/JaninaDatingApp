<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:dropDownListViewStyle">@style/spinnerDividerStyle</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <!--    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">-->
    <!--        <item name="android:textColor">@color/white</item>-->
    <!--        <item name="android:textColorPrimary">@color/white</item>-->
    <!--        <item name="android:background">@color/colorLightBlack</item>-->
    <!--    </style>-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="spinnerStyle" parent="DropDown_PowerSpinner">
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">@dimen/_8sdp</item>
        <item name="spinner_divider_color">@color/black</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_elevation">@dimen/_14sdp</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="background">@color/colorLightBlack</item>
        <item name="spinner_arrow_drawable">@drawable/down</item>
    </style>

    <style name="spinnerDividerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/colorGrey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="customProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">@color/colorTransparent</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:progressBarPadding">0dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
    </style>
    <!--    Style for Bottom Navigation Bar-->
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenir</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/hintTextColor</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

    <style name="RatingBarOverAll">
        <item name="colorControlNormal">@color/ratingUnselectedStarColor</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:colorAccent">@color/colorRed</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/belief_choice_checkbox_selector
        </item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@color/colorTransparent_white</item>
    </style>
</resources>
